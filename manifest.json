{
  "manifest_version": 3,
  "name": "BlockZone",
  "version": "1.0",
  "description": "Block distracting websites and stay focused. Your personal web filter.",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}